<table id="rooms-table">
    <thead>
        <caption>Rooms</caption>
        <tr>

            <th>ID</th>
            <th>Room Type</th>
            <th>Is Occupied</th>
            <th>Number of Occupants</th>
        </tr>
    </thead>

    <tbody>
        {{#each data}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.floor_to_room_type_id}}</td>
            <td>{{this.is_occupied}}</td>
            <td>{{this.num_occupants}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<h1>Add Room:</h1>
<form id="addRoom" action="/rooms.hbs" method="post">
    <label> Is Occupied?</label> <select name="has_facilities">
        <option value="-1">&nbsp;</option>
        <option value="1" selected>yes</option>
        <option value="0" selected>no</option>
    </select>
        <label> number of occupants </label>
        <input type="text" name="num_occupants">
        <div class="form-group">
            <input class="btn" type="submit" id="addRooms" value="Add Room">
        </div>
</form>