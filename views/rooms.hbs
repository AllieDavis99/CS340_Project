<table>
    <thead>
        <caption>Rooms</caption>
        <tr>

            <th>ID</th>
            <th>Floor/RoomType ID</th>
            <th>Is Occupied</th>
            <th>Number of Occupants</th>
        </tr>
    </thead>

    <tbody>
        {{#each data}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.floor_to_room_type_id}}</td>
            <td>{{this.is_occupied}}</td>
            <td>{{this.num_occupants}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<h1>Add Room:</h1>
<form id="addRoom" action="/rooms.hbs" method="post">
    <label>Floor/RoomType ID: </label>
    <select name="floor_to_room_type_id" id="floor_to_room_type_id" name="floor_to_room_type_id">
        <option value="">Select a Customer</option>
        {{#each floorToRoom}}
        <option value="{{this.id}}">{{this.id}}</option>
        {{/each}}
    </select>

    <label> Is Occupied?</label> 
    <select name="is_occupied" id="is_occupied">
        <option value="">&nbsp;</option>
        <option value="1" selected>yes</option>
        <option value="0">no</option>
    </select>

    <label> number of occupants </label>
    <input type="number" name="num_occupants">
        
    <div class="form-group">
        <input class="btn" type="submit" id="addRooms" value="Add Room">
    </div>
</form>