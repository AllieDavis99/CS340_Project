<table id="roomTypes-table">
    <thead>
        <caption>Room Types</caption>
        <tr>

            <th>ID</th>
            <th>Type Name</th>
            <th>Number of Beds</th>
            <th>Number of Baths</th>
            <th>Is Haunted</th>
            <th>Price Per Night</th>
        </tr>
    </thead>

    <tbody>
        {{#each data}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.type_name}}</td>
            <td>{{this.num_beds}}</td>
            <td>{{this.num_baths}}</td>
            <td>{{this.is_haunted}}</td>
            <td>{{this.price_per_night}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<h1>Add Room Type:</h1>
<form id="addRoomType" action="/roomTypes.hbs" method="post">
    <label>Room Type Name: </label>
    <input type="text" name="type_name">

    <label> # of Beds: </label> 
    <input type="number" name="num_beds">
    
    <label> # of Baths: </label> 
    <input type="number" name="num_baths">
    
    <label> is_haunted: </label> 
    <select name="is_haunted">
        <option value="">&nbsp;</option>
        <option value="true" selected>yes</option>
        <option value="false" selected>no</option>
    </select>

    <label> price_per_night: </label> 
    <input type="number" name="price_per_night" />
    
    <div class="form-group">
        <input class="btn" type="submit" id="addRoomType" value="Add Room Type">
    </div>
</form>